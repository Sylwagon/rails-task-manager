<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |t| %>
    <%= t.label :title %>
    <%= t.text_field :title %>
    <%= t.label :detail %>
    <%= t.text_field :detail %>
    <% unless @task.new_record?() %>
      <%= t.label :completed %>
      <%= t.check_box :completed %>
    <% end %>
    <%= t.submit %>
  <% end %>
  <br>
  <br>
  <%= link_to 'Back to list', tasks_path %>
</div>
