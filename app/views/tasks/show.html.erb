<div class="container">
  <h1>Task detail</h1>
  <h2><%= @task.title %></h2>
  <div class="card">
    <p><%= @task.detail %></p>
  </div>
  <p><input type="checkbox" disabled <%= "checked" if @task.completed %>>
    <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
  </p>
  <%= link_to 'Edit the task', edit_task_path(@task) , class: "btn btn-primary btn-lg btn-block"%>
  <br>
  <br>
  <%= link_to 'Back to list', tasks_path %>
</div>
